<project name="Carrot2 Log4J configurations " default="build">
    <property name="project.dir"      location="${basedir}" />
    <property name="dist.dir"         location="tmp/dist" />

    <target name="build">
        <mkdir dir="${dist.dir}" />
        <jar jarfile="${dist.dir}/carrot2-util-log4j.jar">
            <fileset dir="src">
                <exclude name="log4j*.xml" />
                <exclude name="appender-file-html.xml" />
            </fileset>

            <zipfileset dir="src" 
                includes="log4j-silent.xml" fullpath="log4j.xml" />
        </jar>

        <jar jarfile="${dist.dir}/carrot2-util-log4j-warn.jar">
            <fileset dir="src">
                <exclude name="log4j*.xml" />
                <exclude name="appender-file-html.xml" />
            </fileset>

            <zipfileset dir="src" 
                includes="log4j-warn.xml" fullpath="log4j.xml" />
        </jar>
        
        <jar jarfile="${dist.dir}/carrot2-util-log4j-dcs.jar">
            <fileset dir="src">
                <exclude name="log4j*.xml" />
                <exclude name="appender-file-html.xml" />
            </fileset>

            <zipfileset dir="src" 
                includes="log4j-dcs.xml" fullpath="log4j.xml" />
        </jar>

        <jar jarfile="${dist.dir}/carrot2-util-log4j-webapp.jar">
            <fileset dir="src">
                <exclude name="log4j*.xml" />
                <exclude name="appender-file-html.xml" />
            </fileset>

            <zipfileset dir="src" 
                includes="log4j-webapp.xml" fullpath="log4j.xml" />
        </jar>        
    </target>

    <target name="clean">
        <delete dir="${dist.dir}" />
    </target>
</project>
