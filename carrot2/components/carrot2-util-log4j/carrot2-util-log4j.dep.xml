<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-util-log4j" description="Carrot2 Log4j configurations">

    <provides profile="console">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-util-log4j.jar" />
        </files>
        <build><ant file="build.xml" target="build" /></build>
        <check-newer><fileset dir="src" /></check-newer>
    </provides>

    <provides profile="dcs">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-util-log4j-dcs.jar" />
        </files>
        <build><ant file="build.xml" /></build>
        <check-newer><fileset dir="src" /></check-newer>
    </provides>

    <provides profile="webapp">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-util-log4j-webapp.jar" />
        </files>
        <build><ant file="build.xml" target="build" /></build>
        <check-newer><fileset dir="src" /></check-newer>
    </provides>

</component>
