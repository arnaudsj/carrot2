<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" [
  <!ENTITY filters-common SYSTEM "filters-common.xml">
  <!ENTITY filters-silent SYSTEM "filters-silent.xml">
]>

<!-- 
    Log4j configuration for the Webapp.
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Customized appenders. -->
	<appender  name="appender-queries" class="org.apache.log4j.FileAppender">
		<param name="File" value="${catalina.home}/logs/carrot2-queries.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />

	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="%d{ISO8601},%c,%m%n"/>
	    </layout>
	</appender>

	<appender  name="appender-full" class="org.apache.log4j.FileAppender">
		<param name="File" value="${catalina.home}/logs/carrot2-full.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="true" />

	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="%d{ISO8601},[%p],[%t],%c,%m%n"/>
	    </layout>
	</appender>

    <!-- Add logger filters here. -->
    &filters-common;
    &filters-silent;

    <!-- Redirect queries to another appender. -->
    <logger name="queryLog">
        <appender-ref ref="appender-queries" />
    </logger>

    <!-- Root logger config. -->
    <root>
        <priority value="info" />

        <appender-ref ref="appender-full" />
    </root>
</log4j:configuration>
