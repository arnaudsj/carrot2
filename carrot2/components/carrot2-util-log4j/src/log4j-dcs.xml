<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" [
  <!ENTITY filters-common SYSTEM "filters-common.xml">
  <!ENTITY filters-silent SYSTEM "filters-silent.xml">
]>

<!-- 
    DCS Log4j configuration.
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Customized console appender. -->
	<appender  name="appender-console" class="org.apache.log4j.ConsoleAppender">
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d{ABSOLUTE} %-5p] %m%n"/>
	    </layout>
	</appender>

	<appender  name="appender-file" class="org.apache.log4j.FileAppender">
		<param name="File" value=".dcs.log" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="false" />

	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="%d{ISO8601} [%-5p] [%c] %m%n"/>
	    </layout>
	</appender>

	<appender  name="appender-benchmark" class="org.apache.log4j.FileAppender">
		<param name="File" value=".dcs.benchmark" />
		<param name="Encoding" value="UTF-8" />
		<param name="Append" value="false" />

	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="%m%n"/>
	    </layout>
	</appender>

    <!-- Add logger filters here. -->
    &filters-common;
    &filters-silent;
    
    <!-- Redirect DCS loggers to console appender -->
    <logger name="dcs" additivity="false">
    	<level value="info" />
        <appender-ref ref="appender-console" />
    </logger>
    <logger name="batch" additivity="false">
    	<level value="info" />
        <appender-ref ref="appender-console" />
    </logger>
    <logger name="benchmark" additivity="false">
    	<level value="info" />
        <appender-ref ref="appender-console" />
    </logger>
    <logger name="benchmark-results" additivity="false">
    	<level value="info" />
        <appender-ref ref="appender-benchmark" />
    </logger>

    <!-- Root logger config. -->
    <root>
        <priority value="debug" />

        <appender-ref ref="appender-file" />
    </root>
</log4j:configuration>