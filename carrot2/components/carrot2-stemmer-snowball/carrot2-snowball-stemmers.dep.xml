<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-snowball-stemmers"
    description="Carrot2 Snowball Stemmers (Danish, Dutch, English, Finnish, French, German, Italian, Norwegian, English-Porter, Portuguese, Russian, Spanish, Swedish)">

    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-snowball-stemmers.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

    <provides>
        <files>
            <file location="snowball.LICENSE" />
        </files>
    </provides>

	<!-- Carrot2 components -->
	<dependency name="carrot2-local-core" />
    <dependency name="carrot2-license" />

</component>
