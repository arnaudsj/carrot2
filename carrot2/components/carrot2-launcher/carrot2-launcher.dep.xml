<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-launcher"
    description="Carrot2 Launcher utility">

    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-launcher.jar" />
        </files>

        <build>
            <ant file="build.xml" target="build" />
        </build>

	<check-newer>
		<fileset dir="src" />
	</check-newer>

	<meta type="proguard"><![CDATA[
# Keep the launcher entry intact.
-keep class org.carrot2.launcher.Launcher {
    public static void main(java.lang.String[]);
}
	]]></meta>
    </provides>
</component>
