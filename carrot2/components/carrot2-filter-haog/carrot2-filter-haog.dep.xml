<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.cs.put.poznan.pl/dweiss/carrot/component-dependency.dtd" >

<component
    name="carrot2-filter-haog"
    description="Carrot2 HAOG Clustering Filter">

    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-haog.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />

    <dependency name="dom4j" />
    <dependency name="carrot2-util-tokenizer" />
    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-filter-stc" />
</component>
