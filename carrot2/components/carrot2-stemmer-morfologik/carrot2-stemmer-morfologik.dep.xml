<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-stemmer-morfologik"
    description="Carrot2 Stemmer for Polish (Morfologik)">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-stemmer-morfologik.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-license" />
    <dependency name="morfologik-stemming" />
</component>
