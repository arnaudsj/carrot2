<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-filter-fuzzyants"
    description="Carrot2 FuzzyAnts Clustering filter">

    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-fuzzyants.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

	<!-- Carrot2 components -->
    <dependency name="carrot2-license" />
    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-util-common" />
    <dependency name="carrot2-util-tokenizer" />
    
    <dependency name="carrot2-filter-case-normalizer" profile="test" />
    <dependency name="carrot2-input-xml" profile="test" />
    <dependency name="junit" profile="test" />
</component>
