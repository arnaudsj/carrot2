<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-util-common"
    description="Carrot2 Common Utilities">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-util-common.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
    </provides>

    <dependency name="log4j" />
    <dependency name="dom4j" />
    <dependency name="commons-lang" />
    <dependency name="commons-collections" />

    <dependency name="junit" noexport="true" no-copy="true" />
    <dependency name="junit-addons" noexport="true" no-copy="true" />

    <dependency name="carrot2-license" />

    <!-- Certain classes in the utils package need these modules,
         but we don't export them explicitly. -->
    <dependency name="servlets-api" noexport="true" no-copy="true" />    
</component>
