<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-filter-case-normalizer"
    description="Carrot2 Case Normalizer filter component.">
    
    <provides>
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-filter-case-normalizer.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build" />
        </build>
		<check-newer>
			<fileset dir="src" />
		</check-newer>
        <meta type="proguard"><![CDATA[
# Keep case normalizers
-keep class * implements org.carrot2.filter.normalizer.CaseNormalizer {
    public protected <methods>;
}
        ]]></meta>
    </provides>

    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-util-common" />
    <dependency name="carrot2-util-tokenizer" />
    <dependency name="carrot2-license" />

    <dependency name="junit" profile="test" />
    <dependency name="carrot2-language-guesser" profile="test" />
    <dependency name="carrot2-util-tokenizer" profile="test" />
</component>
