<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC "-//Carrot2//DTD Component Dependency Descriptor V1.0//EN" "http://www.carrot2.org/dtd/component-dependency.dtd" >

<component
    name="carrot2-demo-browser"
    description="Carrot2 Demo Browser Application">

    <provides profile="stripped">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-demo-browser.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build.stripped" />
        </build>
        <check-newer>
            <fileset dir="src" />
        </check-newer>
    </provides>

    <provides profile="full">
        <files build-path-exclude="true" prefix="tmp/dist">
            <file location="carrot2-demo-browser.jar" />
        </files>
        <build>
            <ant file="build.xml" target="build.full" />
        </build>
        <check-newer>
            <fileset dir="src" />
        </check-newer>

	<meta type="proguard"><![CDATA[
# (demo browser) 
-keep class org.carrot2.demo.Demo* {
    public static void main(java.lang.String[]);
}

-keep interface org.carrot2.demo.ProcessSettings {
    public protected *;
}

-keep class * implements org.carrot2.demo.ProcessSettings {
    public protected *;
}

-keepnames class org.carrot2.demo.swing.*
	]]></meta>        
    </provides>

    <!-- Required components -->
    <dependency name="carrot2-launcher" />

    <dependency name="looks" />
    <dependency name="forms" />
    <dependency name="junit" noexport="true" nocopy="true" />
    <dependency name="jdic" />
    <dependency name="dom4j" />
    <dependency name="lucene" />
    <dependency name="clustermap" />

    <dependency name="carrot2-local-core" />
    <dependency name="carrot2-util-common" />

    <dependency name="carrot2-util-log4j" in-profile="console" noexport="true" />

    <dependency name="proguard-base" />

    <!-- Stripped profile contains component references for compilation time only -->

    <dependency name="carrot2-filter-lingo" profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-trc" profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-stc" profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-haog" profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-fuzzyants" profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-etools"  profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-yahooapi"  profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-msnapi"  profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-pubmed"  profile="stripped" nocopy="true" />
    <dependency name="carrot2-input-lucene" profile="stripped" nocopy="true" />
    <dependency name="carrot2-util-tokenizer" profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-case-normalizer"  profile="stripped" nocopy="true" />
    <dependency name="carrot2-filter-striphtml" profile="stripped" nocopy="true" />

    <!-- Full profile contains all demo components -->

    <dependency name="carrot2-filter-lingo" profile="full" />
    <dependency name="carrot2-filter-trc" profile="full" />
    <dependency name="carrot2-filter-stc" profile="full" />
    <dependency name="carrot2-filter-haog" profile="full" />
    <dependency name="carrot2-filter-fuzzyants" profile="full" />
    <dependency name="carrot2-input-etools" profile="full" />
    <dependency name="carrot2-input-lucene" profile="full" />
    <dependency name="carrot2-input-yahooapi"  profile="full" />
    <dependency name="carrot2-input-msnapi"  profile="full" />
    <dependency name="carrot2-input-pubmed"  profile="full" />
    <dependency name="carrot2-util-tokenizer" profile="full" />
    <dependency name="carrot2-filter-case-normalizer"  profile="full" />
    <dependency name="carrot2-filter-striphtml" profile="full" />
</component>

