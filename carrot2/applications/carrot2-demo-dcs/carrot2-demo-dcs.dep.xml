<?xml version="1.0" encoding="UTF-8" ?>
<component
    name="carrot2-demo-dcs"
    description="Carrot2 Document Clustering Server">

        <provides profile="demo">
                <files build-path-exclude="true" prefix="tmp/dist">
                        <file location="carrot2-demo-dcs.jar" />
                </files>
                <build>
                        <ant file="build.xml" target="build" />
                </build>
                <check-newer>
                        <fileset dir="src" />
                        <fileset dir="web" />
                </check-newer>
        </provides>

        <provides profile="stripped">
                <files build-path-exclude="true" prefix="tmp/stripped/WEB-INF/lib">
                        <file location="carrot2-demo-dcs.jar" />
                </files>
                <build>
                        <ant file="build.xml" target="build.stripped" />
                </build>
                <rebuild-always />
        </provides>

        <!-- Required dependencies -->
        <dependency name="log4j" />
        <dependency name="dom4j" />
        <dependency name="json" />

        <dependency name="carrot2-license" />
        <dependency name="carrot2-local-core" />
        <dependency name="carrot2-launcher" />
        
        <dependency name="carrot2-util-log4j" in-profile="dcs" noexport="true" />

        <dependency name="jetty" />

        <dependency name="commons-logging" />
        <dependency name="commons-fileupload" />
        <dependency name="commons-cli" />
        <dependency name="xmlrpc-2.0" />
        <dependency name="servlets-api" noexport="true" />

        <dependency name="junit" profile="test" />

        <dependency name="carrot2-filter-lingo" profile="demo" noexport="true" />
        <dependency name="carrot2-filter-stc" profile="demo" noexport="true" />
        <dependency name="carrot2-filter-trc" profile="demo" noexport="true" />
        <dependency name="carrot2-filter-haog" profile="demo" noexport="true" />
        <dependency name="carrot2-stemmer-morfologik" profile="demo" noexport="true" />
        <dependency name="carrot2-filter-case-normalizer" profile="demo" noexport="true" />

</component>
