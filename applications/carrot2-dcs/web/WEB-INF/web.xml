<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>dcs</display-name>
    <description>Document Clustering Server</description>

    <servlet>
        <servlet-name>RestProcessor</servlet-name>
        <servlet-class>org.carrot2.dcs.RestProcessorServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RestProcessor</servlet-name>
        <url-pattern>/dcs/*</url-pattern>
    </servlet-mapping>
</web-app>
