<component-suite>
  <!-- Includes DCS sources and algorithms. -->
  <include suite="suites/suite-dcs.xml" />
  <include suite="suites/source-ambient.xml" />

  <sources>
    <!-- Generic (uninitialized) instance of OpenSearchDocumentSource -->
    <source component-class="org.carrot2.source.opensearch.OpenSearchDocumentSource" id="opensearch">
      <label>Open Search</label>
      <title>Open Search</title>
      <description>
        Open Search document source retrieves search results from search engines supporting
        the OpenSearch standard.
      </description>
    </source>
    
    <!-- Google web search -->
    <source component-class="org.carrot2.source.google.GoogleDocumentSource" id="google">
      <label>Google Web Search</label>
      <title>Google Web Search</title>
      <description>
        Searches the web using Google.
      </description>
    </source>
  </sources>
</component-suite>
