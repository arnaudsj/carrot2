
<project name="Microsoft Live! Search Engine" default="generate">
    <target name="generate">
        <path id="axis.classpath">
          <fileset dir=".">
            <include name="lib/*.jar" />
          </fileset>
          <fileset dir="../../lib/org.apache.commons">
            <include name="*.jar" />
          </fileset>
        </path>

        <taskdef resource="axis-tasks.properties" classpathref="axis.classpath" />

        <delete dir="src">
            <include name="com/microsoft/**/*.java" />
        </delete>

        <axis-wsdl2java
          output="src"
          testcase="false"
          all="true"
          nowrapped="true"
          url="wsdl/msdn.2008.05.03.wsdl">
            <mapping
              namespace="http://schemas.microsoft.com/MSNSearch/2005/09/fex"
              package="com.microsoft.msnsearch" />
        </axis-wsdl2java>
    </target>
</project>
