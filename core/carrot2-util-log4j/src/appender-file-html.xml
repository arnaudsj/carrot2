<!--
    This appender is used for JUnit tests, note its "File"
    attribute has a replacement token (substituted with 
    test folder's path by ANT).
-->
<appender name="appender-file-html" class="org.apache.log4j.FileAppender">
    <param name="File" value="@LOGPATH@" />
    <param name="Append" value="true"/>

    <layout class="org.apache.log4j.HTMLLayout">
    </layout>
</appender>