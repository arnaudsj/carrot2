<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" [
  <!ENTITY appender-console SYSTEM "appender-console.xml">
  <!ENTITY appender-file-html SYSTEM "appender-file-html.xml">
  <!ENTITY filters-common SYSTEM "filters-common.xml">
]>

<!-- 
    Configuration used for JUnit tests (ANT build script).
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Add appenders here. -->
    &appender-console;

    <!-- Add logger filters here. -->
    &filters-common;

    <!-- Root logger config. -->
    <root>
        <priority value="debug" />

        <appender-ref ref="appender-console" />
    </root>
</log4j:configuration>
