<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" [
  <!ENTITY appender-console SYSTEM "appender-console.xml">
  <!ENTITY filters-common SYSTEM "filters-common.xml">
  <!ENTITY filters-silent SYSTEM "filters-silent.xml">
]>

<!-- 
    "Silent" Log4j configuration. Console appender, but limits 
    debugging output. Default root category is INFO.
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Add appenders here. -->
    &appender-console;

    <!-- Add logger filters here. -->
    &filters-common;
    &filters-silent;

    <!-- Root logger config. -->
    <root>
        <priority value="info" />

        <appender-ref ref="appender-console" />
    </root>
</log4j:configuration>
